{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h2 class="uk-heading-line uk-text-center">Register</h2>
    <div class="uk-container uk-margin-large-left uk-margin-large-right">

    {{ form_errors(registrationForm) }}
     
    {{ form_start(registrationForm) }}
    
            <div class="uk-margin uk-width-1-1 uk-width-1-3@m">
                <label class="uk-form-label">Email</label>
                <div class="uk-form-controls">
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'uk-input'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>
            </div>

            <div class="uk-margin uk-width-1-1 uk-width-1-3@m">
                <label class="uk-form-label" >Password</label>
                <div class="uk-form-controls">
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'uk-textarea', 'id':'description'}}) }}
                </div>
            </div>
            <div class="uk-margin ">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'uk-checkbox'}}) }}
                {{ form_label(registrationForm.agreeTerms) }}
                <h1 class="uk-text-meta">You should agree to our terms.</h1>
            </div>
        <button type="submit" class="uk-button uk-button-primary uk-button-center">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
